<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:id="@+id/ll_container"
    android:layout_width="@dimen/sm_px_120"
    android:layout_height="@dimen/sm_px_120"
    android:gravity="center_horizontal"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">
<ImageView
    android:id="@+id/iv_icon"
    android:layout_width="@dimen/sm_px_50"
    android:layout_height="@dimen/sm_px_50"
    android:layout_marginTop="@dimen/sm_px_19"
    android:src="@mipmap/finish_icon"/>

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sm_px_10"
        android:text="充值成功"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sm_px_16" />

</LinearLayout>
</RelativeLayout>