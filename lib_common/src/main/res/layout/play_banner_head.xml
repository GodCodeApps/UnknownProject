<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <com.lib_common.widget.banner.CustomBanner
            android:id="@+id/banner1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sm_px_140"
            android:layout_marginBottom="@dimen/sm_px_10"
            android:layout_marginLeft="@dimen/sm_px_15"
            android:layout_marginRight="@dimen/sm_px_15"
            android:layout_marginTop="@dimen/sm_px_10"
            app:indicatorGravity="CENTER"
            app:indicatorInterval="10dp"
            app:indicatorSelectRes="@drawable/shape_point_select"
            app:indicatorStyle="ORDINARY"
            app:indicatorUnSelectRes="@drawable/shape_point_unselect"
            app:layout_collapseMode="parallax"
            app:layout_collapseParallaxMultiplier="0.5" />
    </LinearLayout>
</layout>