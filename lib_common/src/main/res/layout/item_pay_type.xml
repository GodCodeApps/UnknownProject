<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="?android:selectableItemBackground"
    android:layout_height="@dimen/sm_px_50">
    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/sm_px_24"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/sm_px_15"
        android:layout_height="@dimen/sm_px_24" />
    <com.lib_common.widget.PartColorTextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:text="微信"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sm_px_16"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/sm_px_49"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/iv_check"
        android:layout_width="@dimen/sm_px_24"
        android:layout_gravity="center_vertical|right"
        android:layout_marginRight="@dimen/sm_px_15"
        android:layout_height="@dimen/sm_px_24" />
    <TextView
        android:id="@+id/tv_set_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center_vertical|right"
        android:layout_marginRight="@dimen/sm_px_15"
        android:text="设置交易密码"
        android:textColor="@color/color_1D79E9"
        android:textSize="@dimen/sm_px_16"
        />
</FrameLayout>
