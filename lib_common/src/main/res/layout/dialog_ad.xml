<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/sm_px_15">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="@dimen/sm_px_275"
            android:layout_height="@dimen/sm_px_320"
            android:layout_centerInParent="true"
            app:cardElevation="@dimen/sm_px_0"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="@dimen/sm_px_10">

            <ImageView
                android:id="@+id/image_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.v7.widget.CardView>

        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="@dimen/sm_px_5"
            android:layout_below="@id/card_view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/sm_px_30"
            android:background="@mipmap/ic_ad_close" />
    </RelativeLayout>
</layout>